generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id              Int       @id @default(autoincrement())
  name            String
  orgNumber       String    @unique
  streetAddress   String?
  area            String?
  size            Float?
  rent            Float?
  features        String[]
  contractEndDate DateTime?
  desiredAreas    String[]
  desiredSizeMin  Float?
  desiredSizeMax  Float?
  desiredMaxRent  Float?
  desiredFeatures String[]
}

model Property {
  id             Int      @id @default(autoincrement())
  address        String
  size           Float
  area           String
  features       String[]
  rent           Float
  availableFrom  DateTime
  propertyOwner  String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
